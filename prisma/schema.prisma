generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {

  id String @id @default(cuid())
  username String
  email String @unique
  password String
  image String?
  organization String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions Session[]
  invoices Invoice[]
}


model Session {

  id String @id @default(cuid())
  userId String
  expiredAt DateTime?
  user User @relation(fields: [userId], references: [id])

}

model Invoice {

  id String @id @default(cuid())
  name String 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  recipient String
  recipientEmail String
  recipientPhone String
  recipientAddress String
  authorId String
  
  Items Item[]
  author User @relation (fields: [authorId], references: [id])

}

model Item {

  id  String @id @default(cuid())
  name String
  price Decimal
  quantity Int
  description String
  invoiceId String

  invoice Invoice @relation(fields: [invoiceId], references: [id])

}